<div id="colonias-container">
  {{#each colonias}}
  <div class="colonia-card">
    <img src="{{imagenPrincipal}}" alt="Imagen de {{nombre}}"
    onerror="this.src='/img/default.jpg'; this.onerror=null;">
    <h2>{{nombre}}</h2>
    <p>{{descripcion}}</p>
    <p>{{ubicacion}}</p>
    <span class="estado {{estado}}">{{estado}}</span>
  </div>
  {{/each}}
</div>