<div class="container text-center border border-1 border-dark rounded p-3 mt-4 shadow p-3 mb-3 bg-white rounded w-80">

  <div class="colonia-info mt-4 shadow mb-4 bg-white rounded m-5 d-flex justify-content-around">

    <div class="text-start">
      <h1 class="mt-3">{{detalleColonia.nombre}}</h1>
      <p><i class="fas fa-map-marker-alt text-danger me-2"></i>{{detalleColonia.ubicacion}}</p>
      <p><i class="fas fa-phone-alt text-primary me-2"></i>{{detalleColonia.telefono}}</p>
      <p><i class="fas fa-mobile-alt text-success me-2"></i>{{detalleColonia.movil}}</p>
      <p><strong>Descripción:</strong> {{detalleColonia.descripcion}}</p>
    </div>
    <div>
      <img src="{{detalleColonia.imagenColonia}}" alt="Imagen de {{detalleColonia.nombre}}"
        onerror="this.src='/img/default.jpg'; this.onerror=null;" class="img-fluid rounded mt-3 mb-3"
        style="max-width: 300px;">      
    </div>
  </div> 
  
  <a href="/gatos/crear/{{detalleColonia.id}}" class="btn btn-outline-success shadow me-3">Nuevo Gato</a>
  <a href="/colonias/editar/{{detalleColonia.id}}" class="btn btn-outline-warning shadow me-3">Editar Colonia</a>
  <a href="/colonias/" class="btn btn-outline-primary shadow">Volver a la ventana Colonias</a>

  <h2 class="text-center mt-4 mb-4">Gatos de esta colonia</h2>

  <div id="gatos-container" class="row justify-content-center">
    {{#if gatos.length}}
    {{#each gatos}}
    <div class="card m-3 p-2 shadow gato-card" data-id="{{id}}" style="width: 12rem;">
      <img src="{{imagenGato}}" class="card-img-top" alt="Imagen de gato"
        onerror="this.src='/img/default.jpg'; this.onerror=null;">
      <div class="card-body text-start">
        <h5 class="card-title">Gato {{id}}</h5>
        <p class="card-text">
          <strong>Salud:</strong>
          <span class="estado-salud {{saludClase}}"></span> {{salud}}<br>
          <strong>CER:</strong>
          <i class="{{cerIcono}}"></i>
        </p>
      </div>
    </div>
    {{/each}}
    {{else}}
    <p class="text-center">No hay gatos en esta colonia.</p>
    {{/if}}
  </div>

  <a href="/colonias/" class="mt-4 btn btn-outline-primary">Volver a la ventana Colonias</a> 
</div>



{{{css}}}
<script src="/js/gato.js"></script>