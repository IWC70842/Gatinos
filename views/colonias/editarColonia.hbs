<div class="container text-center border border-dark rounded p-4 mt-5 shadow bg-white w-75">
  <h1 class="mb-4">Editar colonia: {{colonia.nombre}}</h1>

  <div class="d-flex align-items-center justify-content-start gap-4 p-3 border rounded shadow-sm bg-light">

    <!-- Imagen predeterminada para la colonia -->
    <div class="col-4" style="max-width: 33%;">
      <img src="{{#if colonia.imagenColonia}}{{colonia.imagenColonia}}{{else}}/img/default.jpg{{/if}}"
        class="img-fluid rounded" alt="Imagen de colonia" style="max-height: 400px; object-fit: cover;"
        id="previewImagenColonia">
    </div>

    <!-- Formulario de edición de colonia -->
    <form action="/colonias/editar/{{colonia.id}}" method="POST" class="col-8 p-4 border rounded shadow-sm bg-light">
      <input type="hidden" name="_method" value="PUT">
      <div class="mb-3 d-flex align-items-center">
        <label for="nombre" class="form-label w-50">Nombre de la colonia:</label>
        <input type="text" class="form-control" id="nombre" name="nombre" required pattern="^[a-zA-Z\s]+$"
          value="{{colonia.nombre}}" placeholder="El nombre debe contener solo letras y espacios.">
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="imagenColonia" class="form-label w-50">URL de la imagen:</label>
        <input type="url" class="form-control" id="imagenColonia" name="imagenColonia" value="{{colonia.imagenColonia}}"
          placeholder="https://example.com/imagen.jpg" pattern="https?://.+"
          title="Debe ser una URL válida que comience con 'http://' o 'https://'">
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="descripcion" class="form-label w-50">Descripción:</label>
        <textarea class="form-control" id="descripcion" name="descripcion" rows="4" maxlength="500" required
          placeholder="Máximo 500 caracteres">{{colonia.descripcion}}</textarea>
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="telefono" class="form-label w-50">Teléfono fijo:</label>
        <input type="text" class="form-control" id="telefono" name="telefono" required pattern="^\d{7,15}$"
          value="{{colonia.telefono}}" title="Debe ser un número de teléfono válido, solo dígitos (entre 7 y 15)."
          maxlength="15">
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="movil" class="form-label w-50">Teléfono móvil:</label>
        <input type="text" class="form-control" id="movil" name="movil" required pattern="^\d{7,15}$"
          value="{{colonia.movil}}" title="Debe ser un número de teléfono válido, solo dígitos (entre 7 y 15)."
          maxlength="15">
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="ubicacion" class="form-label w-50">Ubicación:</label>
        <input type="text" class="form-control" id="ubicacion" name="ubicacion" required value="{{colonia.ubicacion}}">
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="tamano" class="form-label w-50">Tamaño:</label>
        <select class="form-control" id="tamano" name="tamano" required>
          <option value="">Selecciona un tamaño</option>
          <option value="Pequeña" {{#if (eq colonia.tamano "Pequeña" )}}selected{{/if}}>Pequeña</option>
          <option value="Mediana" {{#if (eq colonia.tamano "Mediana" )}}selected{{/if}}>Mediana</option>
          <option value="Grande" {{#if (eq colonia.tamano "Grande" )}}selected{{/if}}>Grande</option>
        </select>
      </div>

      <div class="d-flex justify-content-center gap-3">
        <button type="submit" class="btn btn-outline-success">Guardar cambios</button>
        <a href="/colonias" class="btn btn-outline-secondary">Cancelar</a>
      </div>
    </form>
  </div>
</div>

{{{css}}}