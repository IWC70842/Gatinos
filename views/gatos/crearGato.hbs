<div class="container text-center border border-dark rounded p-4 mt-5 shadow bg-white w-75">
  <h1 class="mb-4">Registrar nuevo gato para la colonia: {{coloniaId}}</h1>

  <div class="d-flex align-items-center justify-content-start gap-4 p-3 border rounded shadow-sm bg-light">
    
    <div class="col-4" style="max-width: 33%;">
      <img src="/img/default.jpg" class="img-fluid rounded" alt="Imagen de gato"
        style="max-height: 400px; object-fit: cover;" id="previewImagenGato">
    </div>

    <form action="/gatos/crear" method="POST" class="col-8 p-4 border rounded shadow-sm bg-light">

      <input type="hidden" name="colonia[id]" value="{{coloniaId}}"> <!-- Enviamos el objeto colonia con su id -->

      <div class="mb-3 d-flex align-items-center">
        <label for="edadAproximada" class="form-label w-50">Edad Aproximada:</label>
        <input type="number" class="form-control" id="edadAproximada" name="edadAproximada" min="0" max="25" required>
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="raza" class="form-label w-50">Raza:</label>
        <input type="text" class="form-control" id="raza" name="raza" required>
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="colores" class="form-label w-50">Colores:</label>
        <input type="text" class="form-control" id="colores" name="colores" required>
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="sexo" class="form-label w-50">Sexo:</label>
        <select class="form-control" id="sexo" name="sexo" required>
          <option value="MACHO">MACHO</option>
          <option value="HEMBRA">HEMBRA</option>
        </select>
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="pelaje" class="form-label w-50">Pelaje:</label>
        <select class="form-control" id="pelaje" name="pelaje" required>
          <option value="CORTO">CORTO</option>
          <option value="LARGO">LARGO</option>
          <option value="SEMILARGO">SEMILARGO</option>
          <option value="RIZADO">RIZADO</option>
          <option value="SIN_PELO">SIN_PELO</option>
        </select>
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="tamano" class="form-label w-50">Tamaño</label>
        <select class="form-control" id="tamano" name="tamano" required>
          <option value="PEQUEÑO">PEQUEÑO</option>
          <option value="MEDIANO">MEDIANO</option>
          <option value="GRANDE">GRANDE</option>
        </select>
      </div>      

      <div class="mb-3 d-flex align-items-center">
        <label for="vacunado" class="form-label w-50">Vacunado</label>
        <select class="form-control" id="vacunado" name="vacunado" required>
          <option value="true">Sí</option>
          <option value="false">No</option>
        </select>
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="cer" class="form-label w-50">CER</label>
        <select class="form-control" id="cer" name="cer" required>
          <option value="true">Sí</option>
          <option value="false">No</option>
        </select>
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="fechaEntrada" class="form-label w-50">Fecha de entrada</label>
        <input type="date" class="form-control" id="fechaEntrada" name="fechaEntrada" required>
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="motivoEntrada" class="form-label w-50">Motivo de entrada</label>
        <input type="text" class="form-control" id="motivoEntrada" name="motivoEntrada" required>
      </div>

      <div class="mb-3 d-flex align-items-center">
        <label for="imagenGato" class="form-label w-50">URL Imagen Gato</label>
        <input type="url" class="form-control" id="imagenGato" name="imagenGato"
          oninput="document.getElementById('previewImagenGato').src = this.value || '/img/default.jpg'">
      </div>

      <div class="d-flex justify-content-center gap-3">
        <button type="submit" class="btn btn-outline-success">Registrar gato</button>
        <a href="/colonias/{{coloniaId}}" class="btn btn-outline-secondary">Cancelar</a>
      </div>
    </form>
  </div>
</div>

{{{css}}}
<script src="/js/gato.js"></script>